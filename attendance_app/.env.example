# Environment Configuration for Attendance System

# Database Configuration
DATABASE_URL=sqlite:///./attendance.db

# Upload Configuration
UPLOAD_DIR=student_images
MAX_FILE_SIZE=5242880  # 5MB in bytes

# Face Recognition Configuration
FACE_RECOGNITION_MODEL=hog  # Options: 'hog' or 'cnn'
FACE_RECOGNITION_TOLERANCE=0.6  # Lower is more strict (0.0-1.0)

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=*  # Comma-separated list, use * for all origins
